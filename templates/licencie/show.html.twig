{% extends 'base.html.twig' %}

{% block title %}Détails du licencié{% endblock %}

{% block body %}
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between">
                <h5 class="card-title fw-semibold mb-4">Détails du licencié</h5>
            </div>
            <!-- Flash message section -->
            {# {% include 'components/flashMsg.html.twig' %} #}
            <!-- Form -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        {{ include('licencie/_form.html.twig', {'disable_btn': true}) }}
                    </div>
                </div>
            </div>

            <!-- Licenciés de la catégorie -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                            <div class="table-responsive">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title fw-semibold mb-4">Contact du licencié</h5>
                            </div>
                            {% if licencie.contact %}
                                <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                    <tr>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Nom</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Prénom</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Email</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Téléphone</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Actions</h6>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                        <tr>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">{{ licencie.contact.nom }}</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">{{ licencie.contact.prenom }}</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-1">{{ licencie.contact.email }}</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-1">{{ licencie.contact.telephone }}</h6>
                                            </td>
                                            <td class="border-bottom-0 d-flex">
                                                <a class="btn btn-dark m-1" href="{{ path('app_contact_show', {'id': licencie.contact.id}) }}">Voir</a>
                                                <a class="btn btn-warning m-1" href="{{ path('app_contact_edit', {'id': licencie.contact.id}) }}">Modifier</a>
                                                {{ include('contact/_delete_form.html.twig', {'id': licencie.contact.id, 'contact': licencie.contact}) }}
                                            </td>
                                        </tr>
                                </tbody>
                            </table>
                            {% else %}
                                <p>Aucun contact pour ce licencié.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
{% endblock %}
