{% extends 'base.html.twig' %}

{% block title %}Licenciés{% endblock %}

{% block body %}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between">
            <h5 class="card-title fw-semibold mb-4">Licenciés</h5>
            <a class="btn btn-primary m-1" href="{{ path('app_licencie_new') }}">Ajouter</a>
        </div>
        <!-- Flash message section -->
        {# {% include './views/components/flashMsg.php' %} #}
        <!-- Records -->
        <div class="table-responsive">
            {% if licencies|length > 1 %}
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">N° licence</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Nom</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Prenom</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Catégorie</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Actions</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for licencie in licencies %}
                {% if licencie.nom != 'Admin' %}
                            <tr>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ licencie.numLicence }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ licencie.nom }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">{{ licencie.prenom }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">{{ licencie.categorie.nom }}</h6>
                                </td>
                                <td class="border-bottom-0 d-flex">
                                    <a class="btn btn-dark m-1" href="{{ path('app_licencie_show', {'id': licencie.id}) }}">Voir</a>
                                    <a class="btn btn-warning m-1" href="{{ path('app_licencie_edit', {'id': licencie.id}) }}">Modifier</a>
                                    {{ include('licencie/_delete_form.html.twig', {'id': licencie.id}) }}
                                </td>
                            </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun licencié trouvé.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
