{% extends 'base.html.twig' %}

{% block title %}Mails Contact{% endblock %}

{% block body %}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between">
            <h5 class="card-title fw-semibold mb-4">Mails Contact</h5>
            <a class="btn btn-primary m-1" href="{{ path('app_mail_contact_new') }}">Ajouter</a>
        </div>
        <!-- Flash message section -->
        {# {% include './views/components/flashMsg.php' %} #}
        <!-- Records -->
        <div class="table-responsive">
            {% if mail_contacts|length > 0 %}
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Date Envoi</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Objet</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Actions</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mailContact in mailContacts %}
                            <tr>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ mailContact.dateEnvoi|date('Y-m-d H:i:s') }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ mailContact.objet }}</h6>
                                </td>
                                <td class="border-bottom-0 d-flex">
                                    <a class="btn btn-dark m-1" href="{{ path('app_mail_contact_show', {'id': mailContact.id}) }}">Voir</a>
                                    <a class="btn btn-warning m-1" href="{{ path('app_mail_contact_edit', {'id': mailContact.id}) }}">Modifier</a>
                                    {{ include('mail_contact/_delete_form.html.twig', {'id': mailContact.id}) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun mail contact trouv√©.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
