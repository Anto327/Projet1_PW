{% extends 'base.html.twig' %}

{% block title %}Éducateurs{% endblock %}

{% block body %}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between">
            <h5 class="card-title fw-semibold mb-4">Éducateurs</h5>
            <a class="btn btn-primary m-1" href="{{ path('app_educateur_new') }}">Ajouter</a>
        </div>
        <!-- Flash message section -->
        {# {% include './views/components/flashMsg.php' %} #}
        <!-- Records -->
        <div class="table-responsive">
            {% if educateurs|length > 1 %}
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Email</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Roles</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Licencié</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Actions</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for educateur in educateurs %}
                            <tr>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ educateur.email }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0">{{ educateur.roles|join(', ') }}</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">{{ educateur.licencie.nom }} {{ educateur.licencie.prenom }}</h6>
                                </td>
                                <td class="border-bottom-0 d-flex">
                                    <a class="btn btn-dark m-1" href="{{ path('app_educateur_show', {'id': educateur.id}) }}">Voir</a>
                                    <a class="btn btn-warning m-1" href="{{ path('app_educateur_edit', {'id': educateur.id}) }}">Modifier</a>
                                    <a class="btn btn-danger m-1" href="{{ path('app_educateur_delete', {'id': educateur.id}) }}">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Aucun éducateur trouvé.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
