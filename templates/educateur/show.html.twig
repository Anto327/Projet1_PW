{% extends 'base.html.twig' %}

{% block title %}Détails de l'éducateur{% endblock %}

{% block body %}
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between">
                <h5 class="card-title fw-semibold mb-4">Détails de l'éducateur</h5>
            </div>
            <!-- Flash message section -->
            {# {% include 'components/flashMsg.html.twig' %} #}
            <!-- Form -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        {{ include('educateur/_form.html.twig', {'disable_btn': true}) }}
                    </div>
                </div>
            </div>
            <!-- Liste des mails de l'éducateur -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                            <div class="table-responsive">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title fw-semibold mb-4">Liste des mails de l'éducateur</h5>
                            </div>
                            {% if educateur.mailEdus|length > 0 %}
                                <table class="table text-nowrap mb-0 align-middle">
                                <thead class="text-dark fs-4">
                                    <tr>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Date Envoi</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Objet</h6>
                                        </th>
                                        <th class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0">Actions</h6>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mail_edu in educateur.mailEdus %}
                                        <tr>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">{{ mail_edu.dateEnvoi|date('Y-m-d H:i:s') }}</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">{{ mail_edu.objet }}</h6>
                                            </td>
                                            <td class="border-bottom-0 d-flex">
                                                <a class="btn btn-dark m-1" href="{{ path('app_mail_edu_show', {'id': mail_edu.id}) }}">Voir</a>
                                                <a class="btn btn-warning m-1" href="{{ path('app_mail_edu_edit', {'id': mail_edu.id}) }}">Modifier</a>
                                                {{ include('mail_edu/_delete_form.html.twig', {'id': mail_edu.id}) }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            {% else %}
                                <p>Aucun mail pour cet éducateur.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
