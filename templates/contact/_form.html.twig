{# templates/contact/_form.html.twig #}

{{ form_start(form, {'attr': {'class': 'custom-form'}}) }}

<div class="mb-4">
    {{ form_label(form.nom) }}
    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
</div>

<div class="mb-4">
    {{ form_label(form.prenom) }}
    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
</div>

<div class="mb-4">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
</div>

<div class="mb-4">
    {{ form_label(form.telephone) }}
    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
</div>

<div class="mb-4">
    {{ form_label(form.licencie) }}
    {{ form_widget(form.licencie, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="mb-4">
    {{ form_label(form.mailContacts) }}
    {{ form_widget(form.mailContacts, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
</div>


    <button type="submit" class="btn btn-primary">Save</button>


{{ form_end(form) }}
