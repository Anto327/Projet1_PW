{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between">
            <h5 class="card-title fw-semibold mb-4">Catégories</h5>
            <a class="btn btn-primary m-1" href="{{ path('app_categorie_new') }}">Ajouter</a>
        </div>
        <!-- Flash message section -->
        {# {%  include './views/components/flashMsg.php' %} #}
        <!-- Records -->
        <div class="table-responsive">
                {% if categories|length > 1 %}
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Nom</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Code</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Actions</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
          {% for categorie in categories %}
                {% if categorie.id != 1 %}
                                <tr>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">{{categorie.nom}}</h6>
                                    </td>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-1">{{categorie.codeRaccourci}}</h6>
                                    </td>
                                    <td class="border-bottom-0 d-flex">
                                        <a class="btn btn-dark m-1" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Voir</a>
                                        <a class="btn btn-warning m-1" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                                        <button class="btn btn-danger m-1" form="app_categorie_delete_{{ categorie.id }}" type="submit">Supprimer</button>
                                        {{ include('categorie/_delete_form.html.twig', {'id': categorie.id}) }}
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
        {% else %}
                <p>Aucune categorie trouvée.</p>
        {% endif %}
        </div>
    </div>
</div>
{% endblock %}


