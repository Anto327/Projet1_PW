{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie{% endblock %}

{% block body %}
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between">
                <h5 class="card-title fw-semibold mb-4">Détails de la catégorie</h5>
            </div>
            <!-- Flash message section -->
            {# {% include 'components/flashMsg.html.twig' %} #}
            <!-- Détails catégorie -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        {{ include('categorie/_form.html.twig', {'disable_btn': true}) }}
                    </div>
                </div>
            </div>

            <!-- Licenciés de la catégorie -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                            <div class="table-responsive">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title fw-semibold mb-4">Les licenciés de la catégorie</h5>
                            </div>
                            {% if categorie.licencies|length > 0 %}
                                <table class="table text-nowrap mb-0 align-middle">
                                    <thead class="text-dark fs-4">
                                        <tr>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">N° licence</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Nom</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Prenom</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Catégorie</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Actions</h6>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for licencie in categorie.licencies %}
                                {% if licencie.nom != 'Admin' %}
                                            <tr>
                                                <td class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">{{ licencie.numLicence }}</h6>
                                                </td>
                                                <td class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-0">{{ licencie.nom }}</h6>
                                                </td>
                                                <td class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-1">{{ licencie.prenom }}</h6>
                                                </td>
                                                <td class="border-bottom-0">
                                                    <h6 class="fw-semibold mb-1">{{ licencie.categorie.nom }}</h6>
                                                </td>
                                                <td class="border-bottom-0 d-flex">
                                                    <a class="btn btn-dark m-1" href="{{ path('app_licencie_show', {'id': licencie.id}) }}">Voir</a>
                                                    <a class="btn btn-warning m-1" href="{{ path('app_licencie_edit', {'id': licencie.id}) }}">Modifier</a>
                                                    {{ include('licencie/_delete_form.html.twig', {'id': licencie.id}) }}
                                                </td>
                                            </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <p>Aucun licencié pour cette catégorie.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    
{% endblock %}
